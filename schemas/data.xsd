<?xml version="1.0"?>
<xs:schema xmlns:xs='http://www.w3.org/2001/XMLSchema'>
    <xs:complexType name="ChunkType">
        <xs:attribute name="input"  type="xs:string" use="required"/>
        <xs:attribute name="output" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="SignalType">
        <xs:sequence minOccurs="1" maxOccurs="unbounded">
            <xs:element name="chunk" type="ChunkType"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="DataType">
        <xs:sequence minOccurs="1" maxOccurs="unbounded">
            <xs:element name="signal" type="SignalType"/>
        </xs:sequence>
        <xs:attribute name="signal-length"      type="xs:integer" use="required"/>
        <xs:attribute name="observation-length" type="xs:integer" use="required"/>
    </xs:complexType>

    <xs:element name="data" type="DataType"/>
</xs:schema>
